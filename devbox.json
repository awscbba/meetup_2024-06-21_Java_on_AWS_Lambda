{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.6/.schema/devbox.schema.json",
  "packages": [
    "direnv@latest",
    "go-task@latest",
    "jq@latest",
    "yq@latest",
    "awscli2@latest",
    "zsh-prezto@latest",
    "gh@latest",
    "zsh-powerlevel10k@latest",
    "nodejs_20@latest",
    "corepack_20@latest",
    "wget@latest"
  ],
  "shell": {
    "init_hook": [
      // "typeset -g POWERLEVEL9K_INSTANT_PROMPT=off",
      // "source .devbox/nix/profile/default/share/zsh-prezto/init.zsh",
      "echo 'Welcome to devbox!'"
    ],
    "scripts": {
      "install-node-root": ["task install-node-root"],
      "install-cdk":       ["task install-cdk"],
      "install-artillery": ["task install-artillery"],
      "install-sam":       ["task install-sam"],
      "setup-workshop":    ["task setup-workshop"]
    }
  }
}
